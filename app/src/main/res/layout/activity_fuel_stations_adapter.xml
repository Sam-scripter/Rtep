<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fuel_Stations.fuel_stations_adapter">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/station_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Station Id:"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/rations_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rations fuel"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textSize="17sp"
                >

            </TextView>

            <TextView
                android:id="@+id/fuel_Station_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="11dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="13dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/total_litres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="litres"
                    android:layout_gravity="center">

                </TextView>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>




    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>