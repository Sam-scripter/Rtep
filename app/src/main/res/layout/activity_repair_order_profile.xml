<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repair_orders.repair_order_profile">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:text="Order Profile"
            android:textColor="@color/black">

        </TextView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Order Number:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_repair_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="12"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Vehicle Id:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_vehicle_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="001"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Registration Number:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_vehicle_registration_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="Toyota"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Initiated by:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_initiated_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="driver"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Type:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_initiator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="galaxy chum"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Defect Issues:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_defect_issues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="puncture"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Date Posted:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_date_posted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="date posted"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Date Updated:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/repair_profile_date_updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="date updated"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profile_BtnEdit"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:background="@drawable/button_rounded_bg">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profile_BtnDelete"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Delete Profile"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:background="@drawable/button_rounded_bg">

            </androidx.appcompat.widget.AppCompatButton>


        </GridLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>