<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendors.vendor_profile">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:text="Vendor Profile"
            android:textColor="@color/black">

        </TextView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Vendor Id:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="005"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="vendor name:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="chiru hasi"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Contact_info:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_contact_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="chiru@gmail"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="rations diesel"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_rations_diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="12"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="rations petrol:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_diesel_unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="ksh1500"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Rations Petrol:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_rations_petrol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="12"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Petrol unit price:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_petrol_unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="1900"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Total fuel supplied:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_total_fuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="456"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Date Created:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_date_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="date created"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="-6dp"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_gravity="left"
                        android:text="Date Updated:"
                        android:padding="8dp"
                        android:layout_marginLeft="7dp">

                    </TextView>

                    <TextView
                        android:id="@+id/profile_vendor_date_updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:text="123456"
                        android:padding="8dp"
                        android:layout_marginRight="7dp">

                    </TextView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profile_BtnEdit"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:background="@drawable/button_rounded_bg">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vendor_profile_BtnDelete"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Delete Profile"
                android:textColor="@color/white"
                android:shadowRadius="8"
                android:background="@drawable/button_rounded_bg">

            </androidx.appcompat.widget.AppCompatButton>


        </GridLayout>



    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>